<style>
table {
    border-collapse: collapse;
    width: 100%;
}

th, td {
    padding: 8px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

tr:hover{background-color:#f5f5f5}
</style>

<p id="notice"><%= notice %></p>

<h1>Distributions</h1>

<table id="distributions">
  <thead>
    <tr>
      <th>Record Actions</th>
      <th>Investor</th>
      <th>Quart num</th>
      <th>Dist date</th>
      <th>Cum sum days</th>
      <th>Quart days</th>
      <th>Dollar</th>
      <th>Interest rate</th>
      <th>Distribution</th>
      <th>Paid</th>
    </tr>
  </thead>

  <tfoot>
    <tr>
      <th>Record Actions</th>
      <th>Investor</th>
      <th>Quart num</th>
      <th>Dist date</th>
      <th>Cum sum days</th>
      <th>Quart days</th>
      <th>Dollar</th>
      <th>Interest rate</th>
      <th>Distribution</th>
      <th>Paid</th>
    </tr>
  </tfoot>

  <tbody>
    <% @distributions.each do |distribution| %>
      <tr>
        <td><%= link_to 'Show', distribution %>
          <%= link_to 'Edit', edit_distribution_path(distribution) %>
        <%= link_to 'Destroy', distribution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= distribution.note.investor %></td>
        <td><%= distribution.quart_num %></td>  
        <td><%= distribution.dist_date%></td>
        <td><%= distribution.cum_sum_days %></td>
        <td><%= distribution.quart_days %></td>
        <td><%= distribution.dollar %></td>
        <td><%= distribution.interest_rate %></td>
        <td><%= distribution.distribution %></td>
        <td><%= distribution.paid %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Distribution', new_distribution_path %>


