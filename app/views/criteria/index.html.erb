<p id="notice"><%= notice %></p>

<h1>Criteria</h1>

<table>
  <thead>
    <tr>
      <th>Entity name</th>
      <th>Last name</th>
      <th>First name</th>
      <th>Invest date</th>
      <th>Email</th>
      <th>Note type</th>
      <th>Dollar invest</th>
      <th>Notify date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @criteria.each do |criterium| %>
      <tr>
        <td><%= criterium.entity_name %></td>
        <td><%= criterium.last_name %></td>
        <td><%= criterium.first_name %></td>
        <td><%= criterium.invest_date %></td>
        <td><%= criterium.email %></td>
        <td><%= criterium.note_type %></td>
        <td><%= criterium.dollar_invest %></td>
        <td><%= criterium.NOTIFY_DATE %></td>
        <td><%= link_to 'Show', criterium %></td>
        <td><%= link_to 'Edit', edit_criterium_path(criterium) %></td>
        <td><%= link_to 'Destroy', criterium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

