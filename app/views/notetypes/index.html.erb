<style>
table {
    border-collapse: collapse;
    width: 100%;
}

th, td {
    padding: 8px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

tr:hover{background-color:#f5f5f5}
</style>


<p id="notice"><%= notice %></p>

<h1>Notetypes</h1>

<table>
  <thead>
    <tr>
      <th>Record Actions </th>
      <th>Note type</th>
      <th>Note program</th>
      <th>Note interest rate</th>
    </tr>
  </thead>

  <tbody>
    <% @notetypes.each do |notetype| %>
      <tr>
        <td><%= link_to 'Show', notetype %>
          <%= link_to 'Edit', edit_notetype_path(notetype) %></td>
        <td><%= notetype.note_type %></td>
        <td><%= notetype.note_program %></td>
        <td><%= notetype.note_interest_rate %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Notetype', new_notetype_path %>
