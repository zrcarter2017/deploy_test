<style>
table {
    border-collapse: collapse;
    width: 100%;
}

th, td {
    padding: 8px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

tr:hover{background-color:#f5f5f5}
</style>

<p id="notice"><%= notice %></p>

<p>
  <strong>Investor:</strong>
  <%= @note.investor.first_name %>
  <%= @note.investor.last_name %>
</p>

<p>
  <strong>Invest date:</strong>
  <%= @note.invest_date %>
</p>

<p>
  <strong>Note type:</strong>
  <%= @note.note_type %>
</p>

<p>
  <strong>Dollar invest:</strong>
  <%= @note.dollar_invest %>
</p>



<h2>Note's Distributions</h2>
  <body>
      <table>
        <thead>
          <tr>
            <th>Record</th>
            <th>First Name </th>
            <th>Last Name </th>
            <th>Note ID </th>
            <th>Quarter Number </th>
            <th>Distribution Date </th>
            <th>Quarter Days </th>
            <th>Dollar </th>
            <th>Interest Rate</th>
            <th>Distribution </th>
            <th>Paid</th>
            <th>Created At</th>
            <th>Updated At</th>
          </tr>
        </thead>

        <tbody>
          <% @note.distributions.each do |distribution| %>
            <tr>
              <td><%= link_to 'Show', distribution %><br>
                <%= link_to 'Edit', edit_distribution_path(distribution) %><br>
                <%= link_to 'Destroy', distribution, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
              <td><%= @note.investor.first_name %></td>
              <td><%= @note.investor.last_name %></td>
              <td><%= distribution.note_id %></td>
              <td><%= distribution.quart_num %></td>
              <td><%= distribution.dist_date %></td>
              <td><%= distribution.quart_days %></td>
              <td><%= distribution.dollar %></td>
              <td><%= distribution.interest_rate %></td>
              <td><%= distribution.distribution %></td>
              <td><%= distribution.paid %></td>
              <td><%= distribution.created_at %></td>
              <td><%= distribution.updated_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New Note', new_note_path %>
  </body>
